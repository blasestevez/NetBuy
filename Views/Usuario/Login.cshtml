@model LaChozaComercial.Models.DTOs.UsuarioDTO

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-6 col-lg-4">
        <h2 class="text-center mb-4">Login</h2>
        @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card shadow-lg border rounded-lg">
                <div class="card-body p-4">
                    <div class="mb-3">
                        @Html.LabelFor(u => u.userName, "Nombre de Usuario", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(u => u.userName, null, new { @class = "form-control text-center", placeholder = "Ingrese su nombre de usuario" })
                        @Html.ValidationMessageFor(u => u.userName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(u => u.password, "Contraseña", new { @class = "form-label fw-bold" })
                        @Html.PasswordFor(u => u.password, new { @class = "form-control text-center", placeholder = "Ingrese su contraseña" })
                        @Html.ValidationMessageFor(u => u.password, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger mt-3 text-center" role="alert">
                    @Html.Raw(ViewBag.Error)
                </div>
            }

            <div class="text-center mt-3">
                <p>¿No tienes una cuenta? <a href="@Url.Action("Registro", "Usuario")" class="text-primary">Regístrate aquí</a></p>
            </div>
        }
    </div>
</div>

<style>
    .btn-primary {
        background-color: #003366;
        border-color: #003366;
    }

        .btn-primary:hover, .btn-primary:focus {
            background-color: #004080;
            border-color: #004080;
        }
</style>
