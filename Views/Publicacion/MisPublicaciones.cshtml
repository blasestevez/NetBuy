@model IEnumerable<LaChozaComercial.Models.DTOs.PublicacionDTO>

<div class="container-lg bg-white shadow border rounded px-4 py-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fs-4 fw-bold mb-0">Mis Publicaciones</h2>
        <div>
            <button class="btn btn-success fw-bold me-2" onclick="location.href='@Url.Action("CrearPublicacion", "Publicacion")'">Crear Publicación</button>
            <button class="btn btn-danger fw-bold" onclick="location.href='@Url.Action("Logout", "Usuario")'">Cerrar Sesión</button>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4" style="max-height: 500px; overflow-y: auto; margin-top: 20px;">
        @foreach (var publicacion in Model)
        {
            <div class="col">
                <div class="card h-100 border" style="min-height: 320px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@publicacion.Titulo</h5>
                        <p class="card-text text-truncate" style="max-height: 4.5rem; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                            @publicacion.Descripcion
                        </p>
                        <p class="card-text mt-auto"><strong>Precio:</strong> @publicacion.Precio</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .shadow {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.05);
    }
</style>
