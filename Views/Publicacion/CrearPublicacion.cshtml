@model LaChozaComercial.Models.DTOs.CreatePublicacionRequestDTO

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border rounded px-4 py-4 mb-4">
                <h2 class="text-center fs-4 fw-bold mb-4">Crear Publicación</h2>

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Titulo, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control text-center" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Descripcion, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control text-center" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Precio, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Precio, new { @class = "form-control text-center" })
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("MisPublicaciones", "Publicacion")'">Cancelar</button>
                        <button type="submit" class="btn btn-success">Crear</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .shadow {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.05);
    }
</style>
