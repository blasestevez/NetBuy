@model LaChozaComercial.Models.DTOs.CreatePublicacionRequestDTO

<div class="max-w-md mt-4 bg-white shadow-lg border rounded rounded-lg px-8 pt-6 pb-8 mb-4 text-center">
    <h2 class="text-center text-2xl font-bold mb-4">Crear Publicación</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="mb-4">
            @Html.LabelFor(m => m.Titulo, new { @class = "block text-gray-700 text-sm font-bold mb-2" })
            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-input mt-1 block w-full border-gray-300 rounded-md text-center" })
        </div>
        <div class="mb-4">
            @Html.LabelFor(m => m.Descripcion, new { @class = "block text-gray-700 text-sm font-bold mb-2" })
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-input mt-1 block w-full border-gray-300 rounded-md text-center" })
        </div>
        <div class="mb-4">
            @Html.LabelFor(m => m.Precio, new { @class = "block text-gray-700 text-sm font-bold mb-2" })
            @Html.TextBoxFor(m => m.Precio, new { @class = "form-input mt-1 block w-full border-gray-300 rounded-md text-center" })
        </div>

        <div class="mb-4">
            <button type="button" onclick="location.href='@Url.Action("MisPublicaciones", "Publicacion")'" class="bg-danger hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Cancelar</button>
            <button type="submit" class="bg-success hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-2">Crear</button>
        </div>
    }
</div>

<style>
    .shadow-lg {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.05); /* Sombra leve */
    }
</style>
