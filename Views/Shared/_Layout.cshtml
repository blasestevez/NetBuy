<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]NetBuy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaChozaComercial.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Background-TTCb7nCyTXyEXlOy2xZN1GGtdu2qYe.svg" alt="Background" class="position-fixed top-0 start-0 w-100 h-100 object-fit-cover z-n1">

    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm py-2 bg-light bg-opacity-25">
            <div class="container-fluid">
                <a class="navbar-brand fs-4 fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">NetBuy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1 d-flex align-items-center justify-content-center pb-4">
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-2 border-top bg-light bg-opacity-25">
        <div class="container-fluid">
            <p class="text-center text-muted mb-0">&copy; 2024 - NetBuy</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
